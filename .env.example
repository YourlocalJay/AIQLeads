# Database Configuration
POSTGRES_USER=aiqleads
POSTGRES_PASSWORD=aiqleads_secret
POSTGRES_DB=aiqleads
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379

# AI Model API Keys
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_API_BASE_URL=https://api.mistral.ai/v1
MISTRAL_MODEL_NAME=mistral-small-3

DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_BASE_URL=https://api.deepseek.ai/v1
DEEPSEEK_MODEL_NAME=deepseek-r1

# Vector Store Configuration
VECTOR_STORE=pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=aiqleads-leads

# Cost Control Settings
MAX_DAILY_API_CALLS=1000
BUDGET_ALERT_THRESHOLD=50.0

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Monitoring
PROMETHEUS_METRICS_PORT=9090
GRAFANA_PORT=3000

# Development Settings
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO
